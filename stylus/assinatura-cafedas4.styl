  display inline-block
  height v1_1_height
  line-height 1
  opacity 0.2
  overflow hidden
  transition opacity .2s, width .2s
  text-decoration none
  width v1_1_closed_width

.assinatura-cafedas4__img
  display inline-block
  fill #fff
  float right
  height v1_1_height
  width v1_1_open_width

.assinatura-cafedas4__img__logotipo
  opacity 0
  transition opacity .2s

.assinatura-cafedas4:focus
.assinatura-cafedas4:hover
  opacity 1
  text-decoration none
  width v1_1_open_width

.assinatura-cafedas4:focus .assinatura-cafedas4__img__logotipo
.assinatura-cafedas4:hover .assinatura-cafedas4__img__logotipo
  opacity 1

